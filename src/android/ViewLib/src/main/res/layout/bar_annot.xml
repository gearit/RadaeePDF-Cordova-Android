<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bar_back"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:clickable="true"
        android:src="@drawable/btn_back" />

    <ImageView
        android:id="@+id/btn_annot_ink"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_back"
        android:clickable="true"
        android:src="@drawable/btn_annot_ink" />

    <ImageView
        android:id="@+id/btn_annot_line"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_ink"
        android:src="@drawable/btn_annot_line" />

    <ImageView
        android:id="@+id/btn_annot_rect"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_line"
	    android:clickable="true"
        android:src="@drawable/btn_annot_rect" />

    <ImageView
        android:id="@+id/btn_annot_stamp"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_oval"
	    android:clickable="true"
        android:src="@drawable/pdf_custom_stamp" />

    <ImageView
        android:id="@+id/btn_annot_oval"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_rect"
	    android:clickable="true"
        android:src="@drawable/btn_annot_ellipse" />

    <ImageView
        android:id="@+id/btn_annot_note"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_stamp"
	    android:clickable="true"
        android:src="@drawable/btn_annot_note" />

    <ImageView
        android:id="@+id/btn_annot_editbox"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_note"
        android:clickable="true"
        android:src="@drawable/btn_annot_edit" />

    <ImageView
        android:id="@+id/btn_annot_polygon"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_editbox"
        android:clickable="true"
        android:src="@drawable/btn_annot_polygon"/>

    <ImageView
        android:id="@+id/btn_annot_polyline"
        android:layout_width="@dimen/bar_annot_btn_width"
        android:layout_height="@dimen/bar_annot_btn_height"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/btn_annot_polygon"
        android:clickable="true"
        android:src="@drawable/btn_annot_polyline" />
</RelativeLayout>